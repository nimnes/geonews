<% provide(:title, 'Лемматизатор') %>
<h1>Лемматизатор</h1>
<%= form_tag do %>
	<textarea name="input_text" class="span12" id="input-textarea" rows="8" placeholder="Введите текст..."><%= @input_text %></textarea>
	<button type="submit" class="btn">Привести к нормальной форме</button>
<% end %>

<% if @normalized_text.any? %>
<h2>Результат</h2>
<table class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
			<th>Слово</th>
			<th>Лемма</th>
			<th>Аннотация</th>
		</tr>
	</thead>
	<% @normalized_text.each do |sentence| %>
		<% sentence.each do |word| %>
			<% if !word[2].nil? and !word[2][1].nil? and (word[2][1].include?('лок') or word[2][1].include?('но')) %>
			<% @td_style = 'background-color: #90EE90;' %>
			<% else %>
			<% @td_style = '' %>
			<% end %>

			<tr>
			<% word.each do |el| %>
				<td style="<%= @td_style %>"><%= el %></td>
			<% end %>
			</tr>
		<% end %>
	<% end %>
</table>
<% end %>
